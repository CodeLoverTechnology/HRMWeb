@model IEnumerable<HRMWeb.DataModel.M_CommonMasterTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="container">
        <div class="col-lg-12 col-md-12 btn-primary">
            <div class="col-lg-6 col-md-6">
                <h2 class="h2 text-center">Master List</h2>
            </div>
            <div class="col-lg-6 col-md-6 text-right" style="padding:10px;">
                <a href="~/CommonMasterTable/Create" class="btn btn-success">Add New</a>
            </div>
            </div>
        <div class="clearfix"></div>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FieldValue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TableName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FieldValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TableName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
