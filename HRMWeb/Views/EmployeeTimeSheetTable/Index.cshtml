@model IEnumerable<HRMWeb.DataModel.T_EmployeeTimeSheetTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="border shadow pb-4">
    <div class="btn-primary">
        <div class="h2 text-left">
            Employee Time Sheet
            <div class="text-right" style="padding-right:5px;float:right;">
                <a href="~/EmployeeTimeSheetTable/Create" class="btn btn-success">Add Time Sheet</a>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12 col-sm-12 mb-12">
                <div class="mt-2" style="width:100%; overflow:auto;">
                    <table class="table table-striped table-responsive table-bordered text-center d-table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TimeSheetID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.M_ProjectMaster.ProjectCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.WorkDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.WorkingHours)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.WorkDescription)
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.M_CommonMasterTable.FieldValue)*@ <label>Work Type</label>
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.M_EmployeeMasters.EmployeeName)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TimeSheetID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.M_ProjectMaster.ProjectCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WorkDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WorkingHours)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WorkDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.M_CommonMasterTable.FieldValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.M_EmployeeMasters.EmployeeName)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.TimeSheetID }) |
                                    @if (item.CreatedDate < DateTime.Now)
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = item.TimeSheetID })
                                    }
                                    |
                                    @if (item.CreatedDate < DateTime.Now)
                                    {
                                        @Html.ActionLink("Delete", "Delete", new { id = item.TimeSheetID })
                                    }
                                </td>
                            </tr>
                        }

                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>