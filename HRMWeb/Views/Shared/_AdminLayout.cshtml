<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        @ViewBag.Title - HRM Kaushalya Technologies Application
    </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/all.css" rel="stylesheet" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <link href="~/Content/attendence.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap4.css" rel="stylesheet" />
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>
<body id="page-top">
    <nav class="navbar navbar-expand navbar-dark bg-light static-top">
        <a class="navbar-brand mr-1" href="index.html">
            <div class="logo">
                <img src="~/Content/Images/Logo-XenialiQ-Small.png" />
            </div>
        </a>
        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fa fa-navicon text-dark font-weight-bold"></i>
        </button>
    </nav>

    <div id="wrapper">
        <ul class="sidebar navbar-nav bg-light">
            <li class="nav-item active">@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="nav-item">@Html.ActionLink("Designation", "Index", "DesignationMaster")</li>
            <li class="nav-item">@Html.ActionLink("Employee", "Index", "M_EmployeeMasters")</li>
            <li class="nav-item">@Html.ActionLink("User Profile", "Details/E001", "M_EmployeeMasters")</li>
            <li class="nav-item">@Html.ActionLink("Attendance", "Attendance_Management", "M_EmployeeMasters")</li>
            <li class="nav-item">@Html.ActionLink("Apply Leave", "ApplyLeave", "M_EmployeeMasters")</li>
            <li class="nav-item">@Html.ActionLink("Time Sheet", "TimeSheet_Apply", "M_EmployeeMasters")</li>
            <li class="nav-item">@Html.ActionLink("Candidate", "Contact", "Home")</li>
            <li class="nav-item">@Html.ActionLink("Logout", "Login", "Home")</li>
        </ul>
      
        <div id="content-wrapper">
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
        </div>
        <div class="panel-warning card-footer text-center" style="position:fixed;margin-bottom:0px;width:100%;padding-bottom:0px;left:0;bottom:0;">
            <p> @DateTime.Now.Year -  &copy;HRM Kaushalya Technologies Application </p>
        </div>
        <script src="~/Scripts/sb-admin.js"></script>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
