@model IEnumerable<HRMWeb.DataModel.M_EmployeeMasters>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="border shadow pb-4">
    <div class="btn-primary">
        <div class="h2 text-left">
            Employee Master List
            <div class="text-right" style="padding-right:5px;float:right;">
                <a href="~/M_EmployeeMasters/Create" class="btn btn-success">Add New</a>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12 col-sm-12 mb-12">
                <div class="mt-2" style="width:100%; overflow:auto;">
                    <table class="table-striped table-responsive table-bordered text-center d-table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.EmployeeID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmployeeName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CEmailID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ContactNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Department)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifiedDate)
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.M_CommonMasterTable.FieldValue)*@ Country
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.M_CommonMasterTable1.FieldValue)*@ Gender
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.M_DesignationMaster.Designation)
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.M_EmployeeMasters2.EmployeeName)*@
                                @Html.DisplayName("Manager Name")
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CEmailID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Department)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.M_CommonMasterTable.FieldValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.M_CommonMasterTable1.FieldValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.M_DesignationMaster.Designation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.M_EmployeeMasters2.EmployeeName)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
                                </td>
                            </tr>
                        }
                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>