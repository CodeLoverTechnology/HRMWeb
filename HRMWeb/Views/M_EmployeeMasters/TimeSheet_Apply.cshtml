
@{
    ViewBag.Title = "TimeSheet_Apply";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div id="TimeSheetLeave" class="border shadow mt-4 p-0">
            <h3 class="bg-primary text-white p-1 pl-3 mt-0">Time Sheet Apply</h3>
            <div class="p-3">
                <div class="form-group">
                    <label id="lblUserID" class="control-label">User ID</label>
                    <input type="text" id="txtUserID" name="txtUserID" class="form-control-Label" readonly="readonly" />
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <label id="lblProject" class="control-label">Project</label>
                    <select class="form-control" id="txtProject" name="txtProject">
                        <option>---Select---</option>
                    </select>
                </div>
                <div class="form-group">
                    <label id="lblTypeOfWork" class="control-label">Type Of Work</label>
                    <select class="form-control" id="txtTypeOfWork" name="txtTypeOfWork">
                        <option>---Select---</option>
                    </select>
                </div>
                <div class="form-group">
                    <label id="lblDate" class="control-label">Date</label>
                    <input id="txtDate" type="text" name="txtDate" value="" format="dd/mm/yyyy" class="form-control" placeholder="dd/mm/yyyy" required="required" />
                </div>
                <div class="form-group">
                    <label id="lblHourse" class="control-label">Hourse</label>
                    <select class="form-control" id="txtHourse" name="txtHourse">
                        <option>---Select---</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9</option>
                        <option>10</option>
                        <option>11</option>
                        <option>12</option>
                    </select>
                </div>
                <div class="form-group">
                    <label id="lblWorkDescription" class="control-label">Work Description</label>
                    <textarea type="textarea" id="txtWorkDescription" name="txtWorkDescription" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <div class="text-center mt-5">
                        <a href="#" class="btn btn-success">Submit</a>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
<script>
    $('#txtDate').datepicker({
        uiLibrary: 'bootstrap4'
    });
</script>
