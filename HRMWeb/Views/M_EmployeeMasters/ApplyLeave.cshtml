
@{
    ViewBag.Title = "ApplyLeave";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div id="TimeSheetLeave" class="border shadow mt-4 p-0">
            <h3 class="bg-primary text-white p-1 pl-3 mt-0">Apply Leave</h3>
            <div class="p-3">
                <div class="form-group">
                    <label id="lblFromDate" class="control-label">From Date</label>
                    <input id="txtFromDate" type="text" name="txtFromDate" value="" format="dd/mm/yyyy" class="form-control" placeholder="dd/mm/yyyy" required="required" />
                </div>
                <div class="form-group">
                    <label id="lblToDate" class="control-label">To Date</label>
                    <input id="txtToDate" type="text" name="txtToDate" value="" format="dd/mm/yyyy" class="form-control" placeholder="dd/mm/yyyy" required="required" />
                </div>
                <div class="form-group">
                    <label id="lblNoFoLeave" class="control-label">No fo Leave</label>
                    <input type="text" id="txtNoFoLeave" name="txtNoFoLeave" class="form-control-Label" readonly="readonly" />
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <label id="lblTypeOfLeave" class="control-label">Type of Leave</label>
                    <select class="form-control" id="txtTypeOfLeave" name="txtTypeOfLeave">
                        <option>---Select---</option>
                    </select>
                </div>
                <div class="form-group">
                    <label id="lblApprovedBy" class="control-label">Approved By</label>
                    <select class="form-control" id="txtApprovedBy" name="txtApprovedBy">
                        <option>---Select---</option>
                    </select>
                </div>
                <div class="form-group">
                    <div class="text-right mt-5">
                        <a href="#" class="btn btn-primary">Gueue</a>
                        <a href="#" class="btn btn-success">Apply</a>
                        <a href="#" class="btn btn-danger">Cancel</a>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

<script>
    $('#txtFromDate').datepicker({
        uiLibrary: 'bootstrap4'
    });
</script>
<script>
    $('#txtToDate').datepicker({
        uiLibrary: 'bootstrap4'
    });
</script>

